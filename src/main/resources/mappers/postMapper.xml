<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
 "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
 
 <mapper namespace="com.h5tchibook.post.dao.UserPostDAO">
 	<insert id="insertUserPost" parameterType="com.h5tchibook.post.model.UserPost">
 		INSERT INTO
 			`post`
 			(	
 			`userId`
 			,`content`
 			,`contentType`
 			,`contentPath`
 			,`disclosureStatus`
 			,`createdAt`
 			,`updatedAt`
 			)
 		VALUES
 			(
 			#{userId}
 			,#{content}
 			,#{contentType}
 			,#{contentPath}
 			,#{disclosureStatus}
 			,NOW()
 			,NOW()
 			)
 	</insert>
 	
 	<select id="selectPostListByUserId" parameterType="int" resultType="com.h5tchibook.post.model.UserPost">
 		SELECT
 			`id`
 			,`userId`
 			,`content`
 			,`contentType`
 			,`contentPath`
 			,`disclosureStatus`
 			,`createdAt`
 			,`updatedAt`
 		FROM
 			`post`
 		WHERE 
 			`userId`=#{userId}
 		ORDER BY
 			`id`
 		DESC
 	</select>
 	
 	<select id="selectPostListOnlyPhotoByUserId" parameterType="map" resultType="com.h5tchibook.post.model.UserPost">
 		SELECT
 			`id`
 			,`userId`
 			,`content`
 			,`contentType`
 			,`contentPath`
 			,`disclosureStatus`
 			,`createdAt`
 			,`updatedAt`
 		FROM
 			`post`
 		WHERE 
 			`userId`=#{userId}
 		AND 
 			`contentType`='photo'
 		ORDER BY
 			`id` 
 		DESC
 		<if test="limit != null">
 		LIMIT #{limit}
 		</if>
 	</select>
 	
 </mapper>
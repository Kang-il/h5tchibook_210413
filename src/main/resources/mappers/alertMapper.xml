<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
 "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
 
 <mapper namespace="com.h5tchibook.alert.dao.AlertDAO">
 
 	<insert id="insertAlert" parameterType="com.h5tchibook.alert.model.Alert" useGeneratedKeys="true" keyProperty="id">
 		INSERT INTO
 			`alert`
 		(
 			`sendUserId`
 			,`receiveUserId`
 			,`alertType`
 			,`createdAt`
 		)
 	</insert>
 	
 	<delete id="deleteAlertById" parameterType="int">
 		DELETE FROM
 			`alert`
 		WHERE
 			`id`=#{id}
 	</delete>
 	
 	<delete id="deleteAlertByIdlist" parameterType="java.util.List">
 		DELETE FROM
 			`alert`
 		WHERE
 			id IN
 			<foreach collection="idList" item="id" open="(" close=")" separator=",">
 				${id}
 			</foreach>
 	</delete>
 	
 	<select id="selectAlertBySendUserIdAndReceiveUserIdAndFriendAlertType" parameterType="map">
 		SELECT
 			`id`
 			,`sendUserId`
 			,`receiveUserId`
 			,`alertType`
 			,`createdAt`
 		FROM
 			`alert`
 		WHERE
 			`sendUserId`=#{sendUserId}
 		AND
 			`receiveUserId`=#{receiveUserId}
 		AND 
 			`alertType`=#{alertType}
 	</select>
 	
 	<select id="selectAlertListByReceiveUserId" parameterType="int" resultType="com.h5tchibook.alert.model.Alert">
 		SELECT
 			`id`
 			,`sendUserId`
 			,`receiveUserId`
 			,`alertType`
 			,`createdAt`
 		FROM
 			`alert`
 		WHERE
 			`receiveUserId`=#{receiveUserId}
 	</select>
 </mapper>